<div class="container">

<p id="notice"><%= notice %></p>



<h2>Outreach Workers</h2>

<% if current_user.role?(:admin) %>
  <%= link_to 'New Outreach Worker', new_outreach_worker_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name </th>
      <th>Organization</th>
      <th>Phone</th>
      <th>Email</th>
      <% if current_user.role?(:admin) %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @outreach_workers.each do |outreach_worker| %>
      <tr>
        <td><%= link_to outreach_worker.user.name, outreach_worker %></td>
        <td><%= outreach_worker.organization %></td>
        <td><%= outreach_worker.user.phone %></td>
        <td><%= outreach_worker.user.email %></td>
        <% if current_user.role?(:admin) %>
        <td><%= link_to 'Edit', edit_outreach_worker_path(outreach_worker) %> </td>
        <td><%= link_to 'Delete', outreach_worker, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>
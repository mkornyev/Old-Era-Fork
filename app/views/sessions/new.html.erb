<div class="container">

<div class="row">
  <div class="col s7">
    
      <div class="card-content">
        <h3>Log In</h3>
          <br />
          <%= form_with url: sessions_path, local: true do |f| %>
          <div class="control-group">
            <%= f.label :email %>
            <div class="controls">
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password %>
            <div class="controls">
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>
          
          <div class="actions"><%= f.submit "Log In", class: "btn btn-primary btn-raised btn-lg"  %></div>
          <a href="/re_entrants/new">Don't have an account? Register here!</a>
          
        <% end %>
    </div>
  </div>
</div>

</div>
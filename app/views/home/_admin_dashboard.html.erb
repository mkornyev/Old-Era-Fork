<div class="container">


  <div id = "col">
  <h4>Active Clients</h4>
  <h3>There are <%=@reentrants.count%> active clients in the system.</h3>
  <% @reentrants.alphabetical.each do |reentrant| %>
    <div class="card" style="width: 20rem;">
      <div class="card-body">
        <h4 class="card-title"><%=link_to reentrant.first_name, re_entrant_path(reentrant)%></h4>
        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
        <a href="<%= reentrant.phone %>" class="card-link"><%=reentrant.phone%></a>
      </div>
    </div>
  <% end %>
  </div>

  <div id = "col">
  <h4>Filter Transactions by Neighborhood</h4>
  <h3>There are <%=@transactions.this_month.count%> active clients in the system.</h3>
  <% @transactions.each do |transaction| %>
    <div class="card" style="width: 20rem;">
      <div class="card-body">
        <h4 class="card-title"><%=link_to transaction.re_entrant.name+" "+transaction.outreach_worker.name+" "+transaction.resource.name, transaction_path(transaction)%></h4>
        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
        <p class="card-text"><%=transaction.resource.name %> Referral</p>
        <a href="<%= resource.webpage %>" class="card-link">Visit Website</a>
        <a href="<%=resource_path(transaction.resource)%>" class="card-link">View Resource</a>
        <a href="<%=reentrant_path(transaction.re_entrant)%>" class="card-link">View Client</a>
        <a href="<%=outreach_worker_path(transaction.outreach_worker)%>" class="card-link">View SOW</a>

      </div>
    </div>
  <% end %>
  </div>

  <br>
  <br>

</div>

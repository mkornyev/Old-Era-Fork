<div class="container">


<div id = "col">
  <h3>Most Recent Referrals</h3>
  <h4>There have been <%=@transactions.this_month.count%> referral(s) in the past month.</h4>


  <% if @transactions.empty? %>
  <h4> No referrals have been made at this time </h4>

<% else %>

<table>
    <thead>
      <tr>
        <th>Outreach Worker </th>
        <th>User </th>
        <th>Resource </th>
        <th>Resource Used </th>

        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @transactions.this_month.each do |referral| %>
        <tr>
          <td> <%= link_to referral.outreach_worker.user.name, outreach_worker_path(referral.outreach_worker) %></td>

     
          <td> <%= link_to referral.re_entrant.user.name, re_entrant_path(referral.re_entrant) %></td>

          <td> <%= link_to referral.resource.name, resource_path(referral.resource) %></td>
          <td>

          <% if referral.resource_accessed %>
            Yes
          <% else %>
            No
          <% end %> </td>
        </tr>      
      <% end %>
    </tbody>
</table>

<% end %>







  </div>

  <div id = "col">
  <h3>Active Clients</h3>
  <h4>There are <%=@reentrants.count%> active clients in the system.</h4>
  <% @reentrants.alphabetical.each do |reentrant| %>
    <div class="card" style="width: 20rem;">
      <div class="card-body">
        <h4 class="card-title"><%=link_to reentrant.first_name, re_entrant_path(reentrant)%></h4>
        
        <p class="card-link"><%=link_to reentrant.phone, "tel:#{reentrant.phone}"%></p>
      </div>
    </div>
  <% end %>
  </div>

  

  <br>
  <br>

</div>

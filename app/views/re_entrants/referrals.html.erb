        <% else %>
          <a href="<%=resource_path(referral.resource)%>" class="card-link">View Resource</a>
          <a href="<%=share_resource_path_url(referral.resource)%>" class="card-link">Share</a>

        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

</div>
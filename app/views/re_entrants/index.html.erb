<div class = "container">

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% if current_user.role?(:admin) %>
  <%= link_to 'New Re Entrant', new_re_entrant_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Neighborhood</th>
      <th>Phone</th>
      <th>Email</th>
      <% if current_user.role?(:admin) %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @re_entrants.each do |re_entrant| %>
      <tr>

        <td><%= link_to re_entrant.user.name, re_entrant_path(re_entrant) %></td>
        <td><%= re_entrant.neighborhood %></td>
        <td><%= re_entrant.user.phone %></td>
        <td><%= re_entrant.email %></td>
        <% if current_user.role?(:admin) %>
        <td><%= link_to 'Edit', edit_re_entrant_path(re_entrant) %></td>
        <td><%= link_to 'Delete', re_entrant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</div>
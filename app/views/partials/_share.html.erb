  <!-- Modal Structure -->
  <div id="modal<%=resource.name%>" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>Share this resource</h4>
        <%= form_tag(share_resource_path_url) do %>
          <%= text_field_tag(:email, params[:email]) %>
          

    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat"><%= submit_tag("Share") %></a>
      <% end %>
    </div>
  </div>